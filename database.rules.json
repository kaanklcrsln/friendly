{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "friends": {
          "$friendId": {
            ".write": "auth != null && (auth.uid == $uid || auth.uid == $friendId)"
          }
        }
      }
    },
    "friendRequests": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "auth != null",
        "$requestId": {
          ".read": "$userId === auth.uid",
          ".write": "auth != null"
        }
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "chat": {
      "general": {
        "messages": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$messageId": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        }
      },
      "private": {
        "messages": {
          "$conversationId": {
            ".read": "auth != null",
            ".write": "auth != null",
            "$messageId": {
              ".read": "auth != null",
              ".write": "auth != null"
            }
          }
        }
      }
    }
  }
}
